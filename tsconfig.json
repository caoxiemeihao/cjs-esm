    "module": "ESNext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "baseUrl": ".",
    "outDir": "dist",
    "declaration": true
  },
  "include": ["src/**/*.ts"]
}